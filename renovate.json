{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "labels": [
    "run-e2e-tests",
    "renovate"
  ],
  "gitlabci": {
    "fileMatch": [
      "gitlab-ci\\.yml$"
    ]
  },
  "packageRules": [
    {
      "matchPackageNames": [
        "rancher-cis-benchmark",
        "rancher-cis-benchmark-crd"
      ],
      "groupName": "rancher-cis-benchmark"
    },
    {
      "matchPackageNames": [
        "rancher-monitoring",
        "rancher-monitoring-crd"
      ],
      "groupName": "rancher-monitoring"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": "kustomization.yaml",
      "matchStrings": ["https:\/\/github\.com\/(?<depName>.*\/.*?)\/releases\/download\/(?<currentValue>.*?)\/"
      ],
      "datasourceTemplate": "github-releases"
    },
    {
      "fileMatch": "kustomization.yaml",
      "matchStrings": [
        "https:\/\/raw.githubusercontent.com\/(?<depName>[^\/]*\/[^\/]*)\/(?<currentValue>.*?)\/"
      ],
      "datasourceTemplate": "github-tags"
    },
    {
      "fileMatch": "values.yaml",
      "matchStringsStrategy": "recursive",
      "matchStrings": [
        "units:[\\w\\W]*[ ]+",
        "\\n\\s+helm_repo_url:(?<registryUrl>.*)\\n[\\w\\W]*?chart: (?<depName>.*)\\n[\\w\\W]*?version: (?<currentValue>.*)\\n"
      ],
      "datasourceTemplate": "helm"
    },
    {
      "fileMatch": "values.yaml",
      "matchStringsStrategy": "recursive",
      "matchStrings": [
        "source_templates:[\\w\\W]*[ ]+",
        "\\n\\s+url:\\s(?<depName>.*)\\n[\\w\\W]*?(branch:|tag:) (?<currentValue>.*)\\n"
      ],
      "datasourceTemplate": "git-tags"
    },
    {
      "datasourceTemplate": "docker",
      "fileMatch": ["management-cluster-capv-values.yaml"],
      "matchStrings": [
        "#\\s?renovate: registryUrl=(?<registryUrl>.*?) image=(?<depName>.*?)\\s?\\s*kubeVipVersion:\\s?(?<currentValue>[\\w\\.\\-]*)"
      ]
    },
    {
      "datasourceTemplate": "docker",
      "fileMatch": ["kubeadm-capo-cluster.yaml", "kubeadm-capv-cluster.yaml"],
      "matchStrings": [
        "#\\s?renovate: registryUrl=(?<registryUrl>.*?) image=(?<depName>.*?)\\s?\\s*image:.*:(?<currentValue>[\\w+\\.\\-]*)"
      ]
    },
    {
      "datasourceTemplate": "docker",
      "fileMatch": ["vault.yaml"],
      "matchStrings": [
        "spec:\\n[\\w\\W]*?.*image: (?<depName>.*)\\:(?<currentValue>.*)"
      ]
    },
    {
      "fileMatch": "tools/shell-lib/common.sh",
      "matchStringsStrategy": "combination",
      "matchStrings": [
        "SYLVA_TOOLBOX_VERSION=.(?<currentValue>.*).",
        "SYLVA_TOOLBOX_IMAGE:-(?<depName>.*).",
        "SYLVA_TOOLBOX_REGISTRY:-(?<registryUrl>.*)."
      ],
      "registryUrlTemplate": "https://{{{ registryUrl }}}",
      "datasourceTemplate": "docker"
    }
  ]
}
